{
    "manifest_version": 2,

    "name": "Netinfo",
    "short_name": "Netinfo",
    "description": "This extension provides some information about the network",
    "version": "1.0",

    "background":
    {
        "scripts": ["background.js"],
        "persistent": true
    },

    "browser_action":
    {
        "default_icon": "icon.png",
        "default_title": "Network info",
        "default_popup": "popup.html"
    },
    "icons":
    {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },

    "permissions": [
        "tabs",
        "processes",
        "webRequest",
        "<all_urls>"
    ]

}